<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.moloom.img.api.dao.TokensDao">

    <insert id="insert" useGeneratedKeys="true" keyProperty="tokenId"
            parameterType="com.moloom.img.api.entity.Tokens">
        INSERT INTO tokens (token,
                         status,
                         created_by)
        VALUES (#{token},
                #{status},
                #{createdBy})
    </insert>

    <update id="update" parameterType="com.moloom.img.api.entity.Tokens">
        UPDATE tokens
        <set>
            <if test="token != null and token != ''">
                token = #{token},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="createdBy != null">
                created_by = #{createdBy},
            </if>
        </set>
        WHERE token_id = #{tokenId}
    </update>

</mapper>